<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<!-- ContextName of aplication -->
	<contextName>aa79b</contextName>
	
	<!-- Loaded of the properties file of the application -->
	<property resource="${CONTEXT_NAME}/${CONTEXT_NAME}.properties" />
	
	<!-- Definition of StatusListener that manages the StatusManager -->
	<statusListener class="com.ejie.x38.log.UdaLogStatusListener" />  
 	
 	<!-- Definition of the aplic appenders -->
 	
 	<!-- General output -->
 	<!-- appender name="traceSystem" class="ch.qos.logback.core.ConsoleAppender"-->
  	<appender name="salidaEstandarAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<File>${log.path}/salidaEstandar_${CONTEXT_NAME}_${weblogic.Name}.log</File>
    	<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
    		<layout class="com.ejie.x38.log.LogLayout">
    			<appCode>${CONTEXT_NAME}</appCode>
        		<instance>${weblogic.Name}</instance>	
    		</layout>
    	</encoder>
    	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      		<!-- rollover daily -->
     		<fileNamePattern>${log.path}/salidaEstandar_${CONTEXT_NAME}_${weblogic.Name}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      		<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
      		<!-- 7-day history -->
      		<maxHistory>6</maxHistory>
		</rollingPolicy>
  	</appender>
  	
	<appender name="incidenciasAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<File>${log.path}/incidencias_${CONTEXT_NAME}_${weblogic.Name}.log</File>
    	<filter class="com.ejie.x38.log.UdaLogFilter">
      		<logIncidences>true</logIncidences>
    	</filter>
    	<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
	    	<layout class="com.ejie.x38.log.LogLayout">
	    		<appCode>${CONTEXT_NAME}</appCode>
	        	<instance>${weblogic.Name}</instance>	
	    	</layout>
	    </encoder>
    	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${log.path}/incidencias_${CONTEXT_NAME}_${weblogic.Name}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- 7-day history -->
      		<maxHistory>6</maxHistory>
		</rollingPolicy>
  	</appender>
  	
 	<appender name="udaTrazasAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.path}/udaTrazas_${CONTEXT_NAME}_${weblogic.Name}.log</File>
		<filter class="com.ejie.x38.log.UdaLogFilter"/>
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<layout class="com.ejie.x38.log.LogLayout">
	    		<appCode>${CONTEXT_NAME}</appCode>
	        	<instance>${weblogic.Name}</instance>	
	    	</layout>
	    </encoder>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${log.path}/udaTrazas_${CONTEXT_NAME}_${weblogic.Name}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- 7-day history -->
      		<maxHistory>6</maxHistory>
		</rollingPolicy>
	</appender>
	 
	<appender name="aplicTrazasAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.path}/${CONTEXT_NAME}Trazas_${CONTEXT_NAME}_${weblogic.Name}.log</File>
		<filter class="com.ejie.x38.log.UdaLogFilter"/>
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">	
			<layout class="com.ejie.x38.log.LogLayout">
	    		<appCode>${CONTEXT_NAME}</appCode>
	        	<instance>${weblogic.Name}</instance>	
	    	</layout>
	    </encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${log.path}/${CONTEXT_NAME}Trazas_${CONTEXT_NAME}_${weblogic.Name}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- 7-day history -->
      		<maxHistory>6</maxHistory>
		</rollingPolicy>
  	</appender>
  	
	<appender name="auditoriaAccesosAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<File>${log.path}/auditoriaAccesos_${CONTEXT_NAME}_${weblogic.Name}.log</File>
    	<filter class="com.ejie.x38.log.UdaLogFilter"/>
    	<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
	    	<layout class="com.ejie.x38.log.LogLayout">
	    		<appCode>${CONTEXT_NAME}</appCode>
	        	<instance>${weblogic.Name}</instance>	
	    	</layout>
	    </encoder>
    	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${log.path}/auditoriaAccesos_${CONTEXT_NAME}_${weblogic.Name}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- 7-day history -->
      		<maxHistory>6</maxHistory>
		</rollingPolicy>
  	</appender>

  	<appender name="auditoriaBBDDAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<File>${log.path}/auditoriaBBDD_${CONTEXT_NAME}_${weblogic.Name}.log</File>
    	<filter class="com.ejie.x38.log.UdaLogFilter"/>
    	<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
	    	<layout class="com.ejie.x38.log.LogLayout">
	    		<appCode>${CONTEXT_NAME}</appCode>
	        	<instance>${weblogic.Name}</instance>	
	    	</layout>
	    </encoder>
    	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${log.path}/auditoriaBBDD_${CONTEXT_NAME}_${weblogic.Name}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- 7-day history -->
      		<maxHistory>6</maxHistory>
		</rollingPolicy>
  	</appender>
  	
  	<!-- MOMO Appenders -->
  	
  	<appender name="salidaEstandarMomoAppender" class="com.ejie.x38.log.MomoAppender">
  	
  		<servicio>${momo.servicio}</servicio>
		<app>${momo.app}</app>
		<securityTokenId>${momo.securityTokenId}</securityTokenId>
		<w43taEndpointUri>${momo.w43taEndpointUri}</w43taEndpointUri>
		<w43taEndpointPort>${momo.w43taEndpointPort}</w43taEndpointPort>
		<develomentMode>${momo.develomentMode}</develomentMode>
		<doMomo>${momo.doMomo.salidaEstandar}</doMomo>
  	
   		<layout class="com.ejie.x38.log.LogLayout">
   			<appCode>${CONTEXT_NAME}</appCode>
       		<instance>${weblogic.Name}</instance>	
   		</layout>
  	</appender>
  	
	<appender name="incidenciasMomoAppender" class="com.ejie.x38.log.MomoAppender">
	
		<servicio>${momo.servicio}</servicio>
		<app>${momo.app}</app>
		<securityTokenId>${momo.securityTokenId}</securityTokenId>
		<w43taEndpointUri>${momo.w43taEndpointUri}</w43taEndpointUri>
		<w43taEndpointPort>${momo.w43taEndpointPort}</w43taEndpointPort>
		<develomentMode>${momo.develomentMode}</develomentMode>
		<doMomo>${momo.doMomo.incidencias}</doMomo>
	
    	<filter class="com.ejie.x38.log.UdaLogFilter">
      		<logIncidences>true</logIncidences>
    	</filter>
    	<layout class="com.ejie.x38.log.LogLayout">
    		<appCode>${CONTEXT_NAME}</appCode>
       		<instance>${weblogic.Name}</instance>	
    	</layout>
    	
  	</appender>
  	
 	<appender name="udaTrazasMomoAppender" class="com.ejie.x38.log.MomoAppender">
 	
 		<servicio>${momo.servicio}</servicio>
		<app>${momo.app}</app>
		<securityTokenId>${momo.securityTokenId}</securityTokenId>
		<w43taEndpointUri>${momo.w43taEndpointUri}</w43taEndpointUri>
		<w43taEndpointPort>${momo.w43taEndpointPort}</w43taEndpointPort>
		<develomentMode>${momo.develomentMode}</develomentMode>
		<doMomo>${momo.doMomo.udaTrazas}</doMomo>
 	
		<filter class="com.ejie.x38.log.UdaLogFilter"/>
		<layout class="com.ejie.x38.log.LogLayout">
    		<appCode>${CONTEXT_NAME}</appCode>
       		<instance>${weblogic.Name}</instance>	
    	</layout>
	</appender>
	 
	<appender name="aplicTrazasMomoAppender" class="com.ejie.x38.log.MomoAppender">
	
		<servicio>${momo.servicio}</servicio>
		<app>${momo.app}</app>
		<securityTokenId>${momo.securityTokenId}</securityTokenId>
		<w43taEndpointUri>${momo.w43taEndpointUri}</w43taEndpointUri>
		<w43taEndpointPort>${momo.w43taEndpointPort}</w43taEndpointPort>
		<develomentMode>${momo.develomentMode}</develomentMode>
		<doMomo>${momo.doMomo.aplicTrazas}</doMomo>
	
		<filter class="com.ejie.x38.log.UdaLogFilter"/>
		<layout class="com.ejie.x38.log.LogLayout">
    		<appCode>${CONTEXT_NAME}</appCode>
       		<instance>${weblogic.Name}</instance>	
    	</layout>
	    
  	</appender>
  	
	<appender name="auditoriaBBDDMomoAppender" class="com.ejie.x38.log.MomoAppender">
	
		<servicio>${momo.servicio}</servicio>
		<app>${momo.app}</app>
		<securityTokenId>${momo.securityTokenId}</securityTokenId>
		<w43taEndpointUri>${momo.w43taEndpointUri}</w43taEndpointUri>
		<w43taEndpointPort>${momo.w43taEndpointPort}</w43taEndpointPort>
		<develomentMode>${momo.develomentMode}</develomentMode>
		<doMomo>${momo.doMomo.auditoriaBBDD}</doMomo>
		
		<filter class="com.ejie.x38.log.UdaLogFilter"/>

		<layout class="com.ejie.x38.log.LogLayout">
    		<appCode>${CONTEXT_NAME}</appCode>
       		<instance>${weblogic.Name}</instance>
    	</layout>

  	</appender>
  	
	<appender name="auditoriaAccesosMomoAppender" class="com.ejie.x38.log.MomoAppender">
	
		<servicio>${momo.servicio}</servicio>
		<app>${momo.app}</app>
		<securityTokenId>${momo.securityTokenId}</securityTokenId>
		<w43taEndpointUri>${momo.w43taEndpointUri}</w43taEndpointUri>
		<w43taEndpointPort>${momo.w43taEndpointPort}</w43taEndpointPort>
		<develomentMode>${momo.develomentMode}</develomentMode>
		<doMomo>${momo.doMomo.auditoriaAccesos}</doMomo>
	
    	<filter class="com.ejie.x38.log.UdaLogFilter"/>
    	<layout class="com.ejie.x38.log.LogLayout">
    		<appCode>${CONTEXT_NAME}</appCode>
       		<instance>${weblogic.Name}</instance>
    	</layout>
  	</appender>
  	
  	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
			</pattern>
		</encoder>
	</appender>
  	<!--  END MOMO Appenders -->
  	
  	
  	<!-- Root logger -->
	<root level="${log.level.salidaEstandar}">
	  <appender-ref ref="salidaEstandarAppender"/>
	  <appender-ref ref="incidenciasAppender"/>
	  <appender-ref ref="STDOUT" />
	</root>
	
	<!-- Business loggers -->
	<logger name="com.ejie.x38" level="${log.level.udaTrazas}">
		<appender-ref ref="udaTrazasAppender"/>
		<appender-ref ref="udaTrazasMomoAppender"/>
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="com.ejie.${CONTEXT_NAME}" level="${log.level.aplicTrazas}">
		<appender-ref ref="aplicTrazasAppender"/>
		<appender-ref ref="aplicTrazasMomoAppender"/>
                <appender-ref ref="incidenciasMomoAppender"/>
		<appender-ref ref="STDOUT" />
	</logger>
	
	<!-- Audit loggers -->
	<logger name="com.ejie.x38.UdaListener" level="${log.level.auditoriaAccesos}">
		<appender-ref ref="auditoriaAccesosAppender"/>
		<appender-ref ref="auditoriaAccesosMomoAppender"/>
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="com.ejie.x38.security" level="${log.level.auditoriaAccesos}">
		<appender-ref ref="auditoriaAccesosAppender"/>
		<appender-ref ref="auditoriaAccesosMomoAppender"/>
		<appender-ref ref="STDOUT" />
	</logger>
	
	<!-- Appender para las trazas de las consultas SQL -->
	<logger name="org.springframework.jdbc.core" level="${log.level.auditoriaBBDD.springJDBC.query}"
		additivity="false">
		<appender-ref ref="auditoriaBBDDAppender" />
		<appender-ref ref="auditoriaBBDDMomoAppender" />
		<appender-ref ref="STDOUT" />
	</logger>

	<!-- Appender para las trazas de los parÃ¡metros de las consultas SQL -->
	<logger name="org.springframework.jdbc.core.StatementCreatorUtils"
		level="${log.level.auditoriaBBDD.springJDBC.queryParams}" additivity="false">
		<appender-ref ref="auditoriaBBDDAppender" />
		<appender-ref ref="auditoriaBBDDMomoAppender" />
		<appender-ref ref="STDOUT" />
	</logger>
	
</configuration>